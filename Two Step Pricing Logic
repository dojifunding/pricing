8.2 Base de Donn√©es
Structure recommand√©e pour PostgreSQL :
-- Table configurations CREATE TABLE two_step_configs (   id UUID PRIMARY KEY,   user_id UUID NOT NULL,   account_size INTEGER NOT NULL,   phase1_target DECIMAL(3,1) NOT NULL,   phase2_target DECIMAL(3,1) NOT NULL,   daily_loss DECIMAL(3,1) NOT NULL,   max_loss DECIMAL(3,1) NOT NULL,   profit_split INTEGER NOT NULL,   total_days INTEGER NOT NULL,   consistency INTEGER NOT NULL,   base_price DECIMAL(10,2) NOT NULL,   final_price DECIMAL(10,2) NOT NULL,   risk_score DECIMAL(5,2) NOT NULL,   difficulty_level VARCHAR(50),   created_at TIMESTAMP DEFAULT NOW(),      -- Contraintes   CHECK (daily_loss < max_loss),   CHECK (phase1_target >= phase2_target),   CHECK (total_days >= 5 AND total_days <= 20),   CHECK (consistency >= 35 AND consistency <= 50) );  -- Index pour performance CREATE INDEX idx_risk_score ON two_step_configs(risk_score); CREATE INDEX idx_user_configs ON two_step_configs(user_id);
