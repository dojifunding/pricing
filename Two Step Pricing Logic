4. Code d'Impl√©mentation
Voici le code JavaScript complet pour calculer le prix du 2 Step Challenge :
function calculateTwoStepPrice(params) {   // R√©cup√©ration des param√®tres   const accountSize = params.accountSize;   const phase1Target = params.phase1Target;    // en %   const phase2Target = params.phase2Target;    // en %   const dailyLoss = params.dailyLoss;   const maxLoss = params.maxLoss;   const profitSplit = params.profitSplit;   const totalTradingDays = params.totalTradingDays;   const consistency = params.consistency;      // Prix de base selon la taille   const basePrices = {     5000: 69,     10000: 89,     25000: 149,     50000: 249,     100000: 399,     200000: 699   };      // Calcul automatique de la r√©partition des jours   const phase1Days = Math.ceil(totalTradingDays * 0.6);   const phase2Days = totalTradingDays - phase1Days;      let basePrice = basePrices[accountSize];   let difficultyAdjustment = 0;   let splitAdjustment = 0;      // Ajustement Total Targets   const totalTargets = phase1Target + phase2Target;   if (totalTargets < 13) {     difficultyAdjustment += (13 - totalTargets) * 15;   } else if (totalTargets > 15) {     difficultyAdjustment -= (totalTargets - 15) * 10;   }      // Ajustement Daily Loss   if (dailyLoss > 5) {     difficultyAdjustment += (dailyLoss - 5) * 50;   } else if (dailyLoss < 5) {     difficultyAdjustment -= (5 - dailyLoss) * 25;   }      // Ajustement Max Loss   if (maxLoss > 10) {     difficultyAdjustment += (maxLoss - 10) * 45;   } else if (maxLoss < 10) {     difficultyAdjustment -= (10 - maxLoss) * 20;   }      // Ajustement Trading Days   if (totalTradingDays < 10) {     difficultyAdjustment += (10 - totalTradingDays) * 10;   }      // Ajustement Consistency   if (consistency < 45) {     difficultyAdjustment += (45 - consistency) * 3;   }      // Ajustement Split   splitAdjustment = (profitSplit - 80) * 6;      // Prix final avec minimum   let finalPrice = basePrice + difficultyAdjustment + splitAdjustment;   finalPrice = Math.max(finalPrice, basePrice * 0.5);      return {     basePrice: basePrice,     difficultyAdjustment: difficultyAdjustment,     splitAdjustment: splitAdjustment,     finalPrice: Math.round(finalPrice),     phase1Days: phase1Days,     phase2Days: phase2Days,     riskScore: calculateTwoStepRiskScore(params),     difficultyLevel: getDifficultyLevel(totalTargets, dailyLoss, maxLoss)   }; }  function calculateTwoStepRiskScore(params) {   // Risk Score adapt√© au 2 Step   const target1Weight = params.phase1Target / 100;   const target2Weight = params.phase2Target / 100;   const splitWeight = params.profitSplit / 100;   const dailyWeight = params.dailyLoss / 100;   const maxWeight = params.maxLoss / 100;   const daysWeight = params.totalTradingDays / 20;      // Formule avec double validation   return ((target1Weight + target2Weight) * splitWeight) /           (dailyWeight * maxWeight * daysWeight); }  function getDifficultyLevel(totalTargets, daily, max) {   let score = 0;      // Targets (0-40 points)   if (totalTargets <= 10) score += 0;   else if (totalTargets <= 13) score += 15;   else if (totalTargets <= 15) score += 25;   else score += 40;      // Daily Loss (0-30 points)   if (daily <= 4) score += 30;   else if (daily <= 5) score += 20;   else if (daily <= 6) score += 10;   else score += 0;      // Max Loss (0-30 points)     if (max <= 8) score += 30;   else if (max <= 10) score += 20;   else if (max <= 12) score += 10;   else score += 0;      if (score >= 70) return "Tr√®s Difficile";   if (score >= 50) return "Difficile";   if (score >= 30) return "Moyen";   if (score >= 15) return "Facile";   return "Tr√®s Facile"; }  // Fonction pour valider la coh√©rence des param√®tres function validateParameters(params) {   const errors = [];      // V√©rifications de base   if (params.dailyLoss >= params.maxLoss) {     errors.push("Daily Loss doit √™tre < Max Loss");   }      if (params.phase1Target < params.phase2Target) {     errors.push("Phase 1 Target devrait √™tre >= Phase 2 Target");   }      if (params.totalTradingDays < 5) {     errors.push("Minimum 5 jours de trading au total");   }      if (params.consistency > 50) {     errors.push("Consistency ne peut d√©passer 50%");   }      return {     isValid: errors.length === 0,     errors: errors   }; }
